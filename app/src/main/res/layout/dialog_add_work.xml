<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddWorkActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="事务名称"
          android:textSize="16sp">

      </TextView>

      <EditText
          android:id="@+id/addSwName"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="10"
          android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="描述(可以不填)"
          android:textSize="16sp">

      </TextView>

      <EditText
          android:id="@+id/addSwStatement"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="10"
          android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/setst"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="设置开始时间"
          android:textSize="16sp" />

      <EditText
          android:id="@+id/time_st"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="10"
          android:autofillHints="年月日时分"
          android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/seted"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="设置结束时间"
          android:textSize="16sp" />

      <EditText
          android:id="@+id/time_ed"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="10"
          android:autofillHints="年月日时分"
          android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="重要程度(值越大越重要)"
          android:textSize="16sp">
      </TextView>

      <EditText
          android:id="@+id/priorityNum"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="10"
          android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="提前提醒时间(分钟)"
          android:textSize="16sp">
      </TextView>

      <EditText
          android:id="@+id/alarmTime"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="10"
          android:gravity="center_horizontal" />
    </LinearLayout>

  </LinearLayout>
</LinearLayout>
